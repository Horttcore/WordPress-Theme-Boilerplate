/**
 *
 * VARS
 *
 */

// Document
$base_width = 980

// Font
fontstack = sans-serif
fontsize = 16px
fontheight = 1.5

// Colors


/**
 *
 * IMPORTING
 *
 */
@import 'plugins/border-box.styl'
@import 'plugins/clearfix.styl'
@import 'plugins/jquery.bxslider.styl'
@import 'plugins/jquery.fancybox.styl'
@import 'plugins/normalize.styl'
@import 'plugins/polyfill.object-fit.styl'
@import 'plugins/stylar.styl'
@import 'plugins/sprite.styl'
@import 'jeet'
@import 'axis'



/**
 *
 * HTML
 *
 */
body
	font fontsize/fontheight fontstack

ul
ol
table
blockquote
p
	margin 0 0 1.5625em

ul
ol
	li
		margin 0 0 .3125em

ul
	list-style disc

ol
	list-style numeric

nav

	ul
		list-style none
		margin 0

	li
		margin 0

img
	max-width 100%
	height auto

form

	input
		border 1px solid black

	input[type="checkbox"]
	input[type="radio"]
		border none
		width auto

	p.submit
		text-align right

:first-child
	margin-top 0

:last-child
	margin-bottom 0



/**
 *
 * HEADER
 *
 */
.header

	.logo
		display inline-block


/**
 *
 * NAV
 *
 */
.nav-main
.nav-meta
.nav-footer
	nav-horizontal()



