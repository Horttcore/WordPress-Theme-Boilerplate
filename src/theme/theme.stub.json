{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true
    },
    "styles": {
        "color": {
            "text": ""
        },
        "typography": {
            "fontFamily": "var:preset|font-family|default",
            "lineHeight": "normal"
        },
        "spacing": {
            "padding": {
                "right": "2rem",
                "left": "2rem"
            }
        },
        "elements": {
            "link": {
                "color": {
                    "text": "inherit"
                },
                "typography": {
                    "textDecoration": "underline"
                },
                ":hover": {
                    "typography": {
                        "textDecoration": "none"
                    }
                },
                ":active": {
                    "color": {
                        "text": "inherit"
                    }
                },
                ":visited": {
                    "color": {
                        "text": "inherit"
                    }
                }
            }
        }
    }
}
