/**
 *
 * HELPER
 *
 */
.aligncenter
	display block
	margin 0 auto 1.5625em
	text-align center

.alignleft
	float left
	margin 0 1.5625em 1.5625em 0

.alignright
	float right
	margin 0 0 1.5625em 1.5625em

.clear
	clear both

.clearleft
	clear left

.clearright
	clear right

.container
	margin-left auto
	margin-right auto
	padding 0 .625em
	max-width unit( $base_width, 'px' )

.error
	color red

.error-input
	border 1px solid red

.error-message
	background red
	color white
	padding .625em

.left
	float left

.right
	float right



