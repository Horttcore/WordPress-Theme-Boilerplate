/**
 *
 * VARS
 *
 */

// Document
$base_width = 980

// Font
fontstack = sans-serif
fontsize = 16px
fontheight = 1.5



/**
 *
 * IMPORTING
 *
 */
@import 'plugins/border-box.styl'
@import 'plugins/clearfix.styl'
@import 'plugins/dashicons.styl'
@import 'plugins/normalize.styl'
@import 'plugins/polyfill.object-fit.styl'
@import 'plugins/stylar.styl'
@import 'plugins/sprite.styl'


// Colors





/**
 *
 * HTML
 *
 */
html
	font-size 16px

body
	font 1rem/fontheight fontstack

ul
ol
table
blockquote
p
	margin 0 0 1.5625em

ul
ol
	li
		margin 0 0 .3125em

ul
	list-style disc

ol
	list-style numeric

nav

	ul
		list-style none
		margin 0
		padding 0

	li
		margin 0
		padding 0

a
	color inherit

img
	max-width 100%
	height auto

form

	input
		border 1px solid black

	input[type="checkbox"]
	input[type="radio"]
		border none
		width auto

	p.submit
		text-align right

:first-child
	margin-top 0

:last-child
	margin-bottom 0



/**
 *
 * WordPress
 *
 */
@import 'modules/wordpress.comments.styl'
@import 'modules/wordpress.widgets.styl'
@import 'modules/wordpress.wysiwyg.styl'


/**
 *
 * HEADER
 *
 */
@import 'modules/header.styl'



/**
 *
 * NAV
 *
 */
@import 'modules/nav.main.styl'



/**
 *
 * CONTENT
 *
 */
@import 'modules/entry.styl'



/**
 *
 * SIDEBAR
 *
 */
@import 'modules/entry.styl'



/**
 *
 * FOOTER
 *
 */
@import 'modules/footer.styl'



/**
 *
 * HELPER
 *
 */
@import 'modules/helpers.styl'
