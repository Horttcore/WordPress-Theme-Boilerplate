{
    "name": "aurora",
    "version": "1.0.0",
    "description": "A new WordPress Boilerplate Theme by Ralf Hortt",
    "author": "Ralf Hortt <mail@ralfhortt.dev>",
    "license": "GPL-2.0+",
    "homepage": "https://ralfhortt.dev",
    "scripts": {
        "default": "cross-env gulp",
        "dev": "cross-env gulp",
        "watch": "cross-env gulp watch",
        "build": "cross-env gulp build && cross-env bower install --allow-root",
        "fonts": "cross-env gulp fonts",
        "css:lint": "cross-env stylelint resources/scss/**/*.scss",
        "css:fix": "cross-env stylelint ./resources/scss/**/*.scss --fix",
        "js:lint": "cross-env eslint 'resources/js/**/*.js'",
        "js:fix": "cross-env eslint 'resources/js/**/*.js' --fix",
        "php:lint": "cross-env ./vendor/bin/phpcs .",
        "php:fix": "cross-env phpcbf ./",
        "lint": "cross-env npm run css:styles && cross-env npm run js:lint",
        "fix": "npm run css:fix && npm run js:fix"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.16.4",
        "autoprefixer": "^10",
        "browser-sync": "^2.27.7",
        "cross-env": "^7.0.3",
        "cssnano": "^5.0.12",
        "del": "^6.0.0",
        "dotenv": "^10.0.0",
        "eslint-config-google": "^0.14.0",
        "gulp": "^4.0.2",
        "gulp-babel": "^8.0.0",
        "gulp-google-webfonts": "^4.1.0",
        "gulp-image": "^6.2.1",
        "gulp-load-plugins": "^2.0.7",
        "gulp-postcss": "^9.0.1",
        "gulp-sass": "^5.0.0",
        "gulp-sass-glob": "^1.1.0",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-terser": "^2.1.0",
        "import-glob-loader": "^1.1.0",
        "postcss-custom-media": "^8.0.0",
        "postcss-easing-gradients": "^3.0.1",
        "sass": "^1.44.0",
        "stylelint": "^14.1.0",
        "stylelint-order": "^5.0.0",
        "stylelint-scss": "^4.0.0"
    }
}
