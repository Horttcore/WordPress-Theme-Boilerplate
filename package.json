{
    "name": "aurora",
    "version": "1.0.0",
    "description": "A new WordPress Boilerplate Theme by Ralf Hortt",
    "author": "Ralf Hortt <mail@ralfhortt.dev>",
    "license": "GPL-2.0+",
    "homepage": "https://ralfhortt.dev",
    "scripts": {
        "default": "gulp",
        "dev": "gulp",
        "watch": "gulp watch",
        "build": "gulp build && bower install --allow-root",
        "fonts": "gulp fonts",
        "css:lint": "stylelint resources/scss/**/*.scss",
        "css:fix": "stylelint ./resources/scss/**/*.scss --fix",
        "js:lint": "eslint 'resources/js/**/*.js'",
        "js:fix": "eslint 'resources/js/**/*.js' --fix",
        "php:lint": "./vendor/bin/phpcs .",
        "php:fix": "phpcbf ./",
        "lint": "npm run css:styles && npm run js:lint",
        "fix": "npm run css:fix && npm run js:fix"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.19.3",
        "autoprefixer": "^10",
        "browser-sync": "^2.27.10",
        "cssnano": "^5.1.13",
        "del": "^7.0.0",
        "dotenv": "^16.0.3",
        "eslint-config-google": "^0.14.0",
        "gulp": "^4.0.2",
        "gulp-babel": "^8.0.0",
        "gulp-google-webfonts": "^4.1.0",
        "gulp-image": "^6.3.1",
        "gulp-load-plugins": "^2.0.8",
        "gulp-postcss": "^9.0.1",
        "gulp-sass": "^5.1.0",
        "gulp-sass-glob": "^1.1.0",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-terser": "^2.1.0",
        "import-glob-loader": "^1.1.0",
        "postcss-custom-media": "^8.0.2",
        "postcss-easing-gradients": "^3.0.1",
        "sass": "^1.55.0",
        "stylelint": "^14.13.0",
        "stylelint-order": "^5.0.0",
        "stylelint-scss": "^4.3.0"
    }
}
